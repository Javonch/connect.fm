<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/plist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="playlist"
        app:layout_constraintStart_toStartOf="@+id/plist_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plist_cover"
        android:layout_width="132dp"
        android:layout_height="136dp"
        app:layout_constraintTop_toBottomOf="@+id/plist_title"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        tools:layout_editor_absoluteX="104dp" />

    <TextView
        android:id="@+id/plist_liked_song_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="liked songs: "
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/plist_disliked_songs_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="disliked_songs"
        app:layout_constraintEnd_toEndOf="@+id/plist_liked_song_count"
        app:layout_constraintStart_toStartOf="@+id/plist_liked_song_count"
        app:layout_constraintTop_toBottomOf="@+id/plist_liked_song_count" />

    <TextView
        android:id="@+id/plist_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="description of playlist"
        app:layout_constraintStart_toEndOf="@+id/plist_cover"
        app:layout_constraintTop_toBottomOf="@+id/plist_disliked_songs_count" />
</androidx.constraintlayout.widget.ConstraintLayout>